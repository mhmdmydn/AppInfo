<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowBackground">@color/primaryBackgroundColor</item>
		<item name="android:textColorPrimary">@color/primaryTitleColor</item>
		<item name="android:textColorSecondary">@color/primaryDescriptionColor</item>
		<item name="primaryTitleColor">@color/primaryTitleColor</item>
        <item name="primaryDescriptionColor">@color/primaryDescriptionColor</item>
        <item name="primarySizeColor">@color/primarySizeColor</item>
        <item name="primaryBackgroundColor">@color/primaryBackgroundColor</item>
        <item name="primaryCardBackgroundColor">@color/primaryCardBackgroundColor</item>
        <item name="actionBarPopupTheme">@style/SubmenuHeaderStyle</item>
		<item name="android:alertDialogTheme">@style/DialogLight</item>
		<!--<item name="android:dialogTheme">@style/AlertDialogLight</item>-->
		<item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
		<!-- To change the background of options menu-->
        <item name="android:itemBackground">@color/primaryCardBackgroundColor</item>
<!--		<item name="android:textColorPrimary">@color/primaryTitleColor</item>-->
    </style>

    <!--Splash screen theme. You should use it in your manifest file for your Splash Activity-->
    <style name="AppTheme.Launcher">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
	
	<style name="SubmenuHeaderStyle">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColor">@color/primaryTitleColor</item>
    </style>
	
	<style name="WindowAnimationTransition">
		<item name="android:windowEnterAnimation">@android:anim/fade_in</item>
		<item name="android:windowExitAnimation">@android:anim/fade_out</item>
	</style>
	
	<style name="AlertDialogLight" parent="Theme.AppCompat.Dialog.Alert">
		<!-- Used for the buttons -->
		<item name="colorAccent">@color/primaryTitleColor</item>
		<!-- Used for the title and text -->
		<item name="android:textColorPrimary">@color/primaryDescriptionColor</item>
		<!-- Used for the background -->
		<item name="android:background">@drawable/bg_dialog</item>
	</style>
	
	
	<style name="AlertDialogDark" parent="Theme.AppCompat.Dialog.Alert">
		<!-- Used for the buttons -->
		<item name="colorAccent">@color/primaryTitleColorNight</item>
		<!-- Used for the title and text -->
		<item name="android:textColorPrimary">@color/primaryDescriptionColorNight</item>
		<!-- Used for the background -->
		<item name="android:background">@drawable/bg_dialog</item>
	</style>
	
	
	<style name="DialogLight" parent="Theme.AppCompat.Dialog">
		<item name="android:textColorPrimary">@color/primaryTitleColor</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@drawable/bg_dialog</item>
		<item name="android:windowMinWidthMinor">@dimen/size_300</item>
    </style>

	<style name="DialogNight" parent="Theme.AppCompat.Dialog">
		<item name="android:textColorPrimary">@color/primaryTitleColorNight</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@drawable/bg_dialog</item>
		<item name="android:windowMinWidthMinor">@dimen/size_300</item>
    </style>
	
	
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
